{
  "name": "supaship-sdk",
  "version": "0.7.3",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "pnpm -r clean",
    "build": "pnpm -r build",
    "build:tsup": "pnpm -r build:tsup",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "commitlint": "commitlint --edit",
    "commitlint:test": "echo 'feat: test commit message' | commitlint",
    "prepare": "husky install",
    "release": "lerna version --no-push --no-git-tag-version",
    "link:global": "pnpm build && pnpm -r --filter './packages/*' exec pnpm link --global",
    "unlink:global": "pnpm -r --filter './packages/*' exec pnpm unlink --global"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
