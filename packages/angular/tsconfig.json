{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "types": ["jest", "node"],
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts", "src/**/__tests__/**/*"]
}
